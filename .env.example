PORT=8000
HOST=0.0.0.0
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# PostgreSQL connection
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=123456
PGDATABASE=work_schedule
# Alternatively provide a DATABASE_URL like: postgres://user:pass@host:5432/dbname
DATABASE_URL=

# PostgreSQL client tool paths (Windows): set if pg_dump/pg_restore not in PATH
# Adjust the version folder if needed (e.g., 16, 17)
PGDUMP_PATH="C:\Program Files\PostgreSQL\17\bin\pg_dump.exe"
PGRESTORE_PATH="C:\Program Files\PostgreSQL\17\bin\pg_restore.exe"

# Email
EMAIL_FROM=no-reply@example.com

# mailerSend Email Configuration
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_FROM_EMAIL=your_email@example.com
MAILERSEND_FROM_NAME=Your Name
ADMIN_EMAIL=admin@example.com
DEBUG_EMAIL=true